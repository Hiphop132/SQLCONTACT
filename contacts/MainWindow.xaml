<Window Name="ParentWindow"
        x:Class="contacts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:contacts"
        mc:Ignorable="d"
        Title="contact" Height="450" Width="800">
    <Viewbox Stretch="Uniform">
    <Grid Background="AliceBlue">
        <Button Name="Openbtn" Content="Open Contacts" HorizontalAlignment="Center" Margin="0,182,0,0" VerticalAlignment="Top" Height="60" Width="128" Click="Openbtn_Click"/>
        <ContentControl x:Name="CC" Grid.Column="0" HorizontalAlignment="Right" Height="450" Width="800"/>
    </Grid>
    </Viewbox>
</Window>
